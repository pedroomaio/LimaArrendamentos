@model LimaArrendamentos.Models.ChangePasswordViewModel
@{
    Layout = null;
}


<title>Mudar Palavra-passe | LimArrendamentos</title>

<link rel="shortcut icon" href="~/img/logo.png" type="image/x-icon">
<link rel="stylesheet" type="text/css" href="~/Login/vendor/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="~/Login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
<link rel="stylesheet" type="text/css" href="~/Login/css/util.css">
<link rel="stylesheet" type="text/css" href="~/Login/css/main.css">


<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-form-title">
                <span class="login100-form-title-1">
                    Mudar a palavra-passe
                </span>
            </div>

            <form method="post" class="login100-form validate-form">
                <div class="wrap-input100 validate-input m-b-26" data-validate="Palavra-passe antiga é necessária">
                    <span class="label-input100" style="color: orange;">Password antiga</span>
                    <input class="input100" asp-for="OldPassword" type="password" placeholder="Insira a palavra-passe antiga">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-18" data-validate="Nova palavra-passe é necessária">
                    <span class="label-input100" style="color: orange;">Nova password</span>
                    <input class="input100" asp-for="NewPassword" type="password" placeholder="Insira a nova palavra-passe">
                    <span asp-validation-for="NewPassword" class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-18" data-validate="Confirmar palavra-passe é necessária">
                    <span class="label-input100" style="color: orange;">Confirmar password</span>
                    <input class="input100" asp-for="Confirm" type="password" placeholder="Confirme a nova palavra-passe">
                    <span asp-validation-for="Confirm" class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn mt-2">
                    <button type="submit" value="Mudar palavra-passe" class="btn btn-primary mr-1">Mudar palavra-passe</button>
                    <a asp-action="ChangeUser" class="btn btn-link">Voltar atrás</a>
                </div>
            </form>

            <div class="alert-warning text-center" role="alert">@ViewBag.Message</div>

        </div>
    </div>
</div>

<script src="~/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
<script src="~/Login/vendor/animsition/js/animsition.min.js"></script>
<script src="~/Login/vendor/bootstrap/js/popper.js"></script>
<script src="~/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Login/vendor/select2/select2.min.js"></script>
<script src="~/Login/vendor/daterangepicker/moment.min.js"></script>
<script src="~/Login/vendor/daterangepicker/daterangepicker.js"></script>
<script src="~/Login/vendor/countdowntime/countdowntime.js"></script>
<script src="~/Login/js/main.js"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

