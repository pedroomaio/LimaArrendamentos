@model LimaArrendamentos.Models.LoginViewModel

@{
    Layout = null;
}

<title>Login | LimArrendamentos</title>

<link rel="shortcut icon" href="~/img/logo.png" type="image/x-icon">
<link rel="stylesheet" type="text/css" href="~/Login/vendor/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="~/Login/css/util.css">
<link rel="stylesheet" type="text/css" href="~/Login/css/main.css">


<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-form-title">
                <span class="login100-form-title-1">Entre com a sua conta</span>
            </div>

            <form method="post" class="login100-form validate-form">
                <div class="wrap-input100 validate-input m-b-26" data-validate="E-mail necessário">
                    <span class="label-input100">E-mail</span>
                    <input class="input100" asp-for="Username" type="text" name="username" placeholder="Insira o seu Email">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-18" data-validate="Palavra-passe necessária">
                    <span class="label-input100">Password</span>
                    <input class="input100" asp-for="Password" type="password" placeholder="Insira a sua palavra-passe">
                    <span asp-validation-for="Password" class="focus-input100"></span>

                </div>

                <div class="flex-sb-m w-full p-b-30 row">
                    <div class="contact100-form-checkbox">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Lembrar-me?</label>
                        <span asp-validation-for="RememberMe" class="text-warning"></span>
                    </div>
                </div>

                <div class="mb-2 wrap-input100 d-flex justify-content-center" style="border-style: none;">
                    <a asp-action="RecoverPassword">Esqueceu-se da palavra-passe?</a>
                </div>

                <p class="mb-4 wrap-input100 d-flex justify-content-center" style="border-style: none;">
                    Ainda não tem conta?
                    <a asp-controller="Account" asp-action="Register" 
                       style="color: #007bff; border-style: none;">&nbsp;Registe-se aqui.</a>
                </p>

                <div class="container-login100-form-btn d-flex justify-content-center">
                    <button type="submit" value="Login" class="btn btn-success w-75">Entrar</button>
                </div>
            </form>

            <div class="alert-danger text-center" role="alert">@ViewBag.Message</div>

        </div>
    </div>
</div>


@* scripts section *@
<script src="~/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
<script src="~/Login/vendor/animsition/js/animsition.min.js"></script>
<script src="~/Login/vendor/bootstrap/js/popper.js"></script>
<script src="~/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Login/vendor/select2/select2.min.js"></script>
<script src="~/Login/vendor/daterangepicker/moment.min.js"></script>
<script src="~/Login/vendor/daterangepicker/daterangepicker.js"></script>
<script src="~/Login/vendor/countdowntime/countdowntime.js"></script>
<script src="~/Login/js/main.js"></script>
