@model LimaArrendamentos.Models.SendMailViewModel


@{ Layout = null; ; }

<!DOCTYPE html>
<html lang="en">

<head>

    <title>Início | LimArrendamentos</title>

    @* basic metas *@
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    @* site metas *@
    <meta name="description" content="WebSite criado para o Projeto Final
          do curso de Técnico/a Especialista em Tecnologias e Programação de Sistemas de Informação - CET57 2021">
    <meta name="keywords" content="arrendamentos, procurar casa, alugar casa, cet57, cinel">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Ana Catarina Lima, Miguel Ribeiro, Pedro Maio" />

    @* mobile metas *@
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="shortcut icon" href="~/img/logo.png" type="image/x-icon">

    @* css styles *@
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    @* font styles *@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:400,400i,700,700i,900%7cRoboto:400,400i,500,500i,700,700i&display=swap">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Raleway:300,400,500,700">

    @* libraries *@
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />


</head>

<body>

    @* navbar section *@
    <header class="header-section" style="position: fixed; z-index: 1; background-color: #22242b; box-shadow: 0 0 10px 0;">

        <div class="container">

            <nav class="navbar navbar-expand-lg navbar-dark text-uppercase" style="background-color: #22242b;">

                <a class="nav navbar-brand" href="#" data-page="homeSection">
                    <img src="~/img/logo.png" width="35" height="35" alt="logo" />
                    <span>LimArrendamentos</span>
                </a>

                <button class="navbar-toggler fas fa-grip-lines" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                </button>

                <div class="collapse navbar-collapse main-menu" id="navbarSupportedContent">

                    <ul class="navbar-nav">

                        <li class="nav-item"><a class="nav-link" href="#" data-page="searchSection">Procurar</a></li>
                        <li class="nav-item"><a class="nav-link" href="#" data-page="aboutSection">Sobre</a></li>
                        <li class="nav-item"><a class="nav-link" href="#" data-page="contactsSection">Contactos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Realty" asp-action="Index1">Anúncios</a></li>


                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link font-weight-bold" asp-controller="Dashboard" asp-action="Index"
                                   style="color: white;">Painel de Controlo</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link font-weight-bold" asp-controller="Account" asp-action="Logout"
                                   style="color: white;">Sair</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" style="margin-left: 10px; margin-right: -20px;">
                                <a class="nav-link font-weight-bold" asp-controller="Account" asp-action="Login"
                                   style="color: white;">Entrar</a>
                            </li>
                            <li class="nav-item" style="margin-left: 10px;">
                                <a class="nav-link font-weight-bold" asp-controller="Account" asp-action="Register"
                                   style="color: white;">Registar</a>
                            </li>
                        }

                    </ul>

                </div>

            </nav>
        </div>
    </header>


    @* body section *@
    <div class="section position-relative text-center text-white d-flex min-vh-100 page" id="homeSection">

        <div class="container-fluid position-absolute align-self-center">
            <div class="section-title">
                <div class="welcome-box">
                    <span>Olá, seja bem-vindo ao</span>
                    <h1 style="font-size: calc(32px + 2vw);">LimArrendamentos</h1>
                    <p style="margin-top: -30px;">Aqui poderá encontrar todo o tipo de imóveis. Desfrute!</p>
                </div>
            </div>
        </div>

        <img src="~/img/main/859.jpg" style="width:100%; object-fit: cover;" />

    </div>

    <hr style="border-style: dotted none none none; border-width: 10px; border-color: #22242b; width: 5%;" />

    @* search section *@
    <div id="searchSection" class="carousel slide min-vh-100" data-ride="carousel">
        <div class="carousel-inner page">

            <div class="carousel-item active">
                <img src="~/img/main/amazing_house-wallpaper-1920x1080.jpg" />
            </div>

            <div class="carousel-item">
                <img src="~/img/main/beautyHouse.jpg" />
            </div>

            <div class="carousel-item">
                <img src="~/img/main/HouseImage.jpg" />
            </div>

            <div class="container" style="margin-top: 300px;">
                <div class="hero-warp">
                    <form class="main-search-form">
                        <div class="search-type">
                            <div class="st-item">
                                <input type="radio" name="st" id="propertyName" checked>
                                <label for="propertyName">Nome da Propriedade</label>
                            </div>
                            <div class="st-item">
                                <input type="radio" name="st" id="propertyLocation">
                                <label for="propertyLocation">Localidade</label>
                            </div>
                            <div class="st-item">
                                <input type="radio" name="st" id="propertyValue">
                                <label for="propertyValue">Valor</label>
                            </div>
                        </div>
                        <div class="search-input">
                            <input type="text" placeholder="Escreva aqui a sua procura">
                            <button class="site-btn">Procurar</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <a class="carousel-control-prev" href="#searchSection" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#searchSection" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <hr style="border-style: dotted none none none; border-width: 10px; border-color: #22242b; width: 5%;" />

    @* about section *@
    <section id="aboutSection" class="about-section spad min-vh-100 d-flex align-items-center page"
             style="background-color: white;">

        <div class="container">

            <hr />

            <h3 class="text-center">Uma equipa de elite pronta a ajudá-lo a encontrar a sua casa de sonho!</h3>

            <hr class="mb-5" />

            <div class="row">
                <div class="col-lg-6 order-lg-2">
                    <img src="~/img/about/1.jpg" alt="" class="h-100" style="object-fit: contain;">
                </div>

                <div class="col-lg-6 order-lg-1">
                    <div class="about-text">
                        <p class="text-justify">
                            O LimArrendamentos é a porta de entrada para mais de 300.000 imóveis em Portugal.
                            Porque em cada família que cresce, em cada ida para uma nova cidade, na vontade de alcançar
                            horizontes, há uma necessidade de mudança que exige a resposta perfeita.
                            Esta é a morada certa para abraçar todos os momentos da vida.
                        </p>

                        <p class="text-justify">
                            Com o LimArrendamentos tem a forma mais simples,
                            rápida e prática de pesquisar imóveis com a garantia de qualidade que só o
                            Portal de referência no Imobiliário em Portugal lhe pode oferecer.
                            Ao visitar o LimArrendamentos vai encontrar uma porta aberta para grandes
                            negócios e grandes mudanças com toda a segurança do líder do Imobiliário online.
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <hr style="border-style: dotted none none none; border-width: 10px; border-color: #22242b; width: 5%;" />


    @* contacts section *@
    <div class="min-vh-100 d-flex align-items-center page" id="contactsSection">
        <div class="container">
            <section class="contact-section">
                <div class="container">

                    <hr />

                    <div class="row justify-content-center">
                        <h3 class="text-center">Entre em contacto conosco!</h3>
                    </div>

                    <hr />

                    <form class="contact-form" asp-action="Index" method="post">
                        <div class="row">
                            <div class="col-lg-4">
                                <input asp-for="Name" type="text" placeholder="Nome *" />
                            </div>
                            <div class="col-lg-4">
                                @if (this.User.Identity.IsAuthenticated)
                                {
                                    <input asp-for="Email" type="email" placeholder="E-mail *" value="@this.User.Identity.Name" 
                                           required="required" data-error="O e-mail precisa ser válido."/>
                                }
                                else
                                {
                                    <input asp-for="Email" type="email" placeholder="E-mail *" 
                                           required="required" data-error="O e-mail precisa ser válido."/>
                                }
                            </div>
                            <div class="col-lg-4">
                                <input asp-for="Subject" type="text" placeholder="Assunto *" 
                                       required="required" data-error="Por favor escolha o assunto."/>
                            </div>
                            <div class="col-lg-12">
                                <textarea asp-for="Body" placeholder="Mensagem *" required="required"
                                              data-error="Por favor escreva a mensagem."></textarea>
                                <button id="sendMail" type="submit" class="site-btn sb-big" data-toggle="modal" 
                                        data-target="#modalCenter">Enviar mensagem</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>


    @* sendmail modal *@
    <div class="modal fade" id="modalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" 
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Mensagem Enviada</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Obrigado pela mensagem, entraremos em contacto o mais depressa possível.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>


    @* footer section *@
    <footer class="footer-section pt-4 position-relative">
        <div class="copyright text-center">
            &copy; @DateTime.Now.Year TODOS OS DIREITOS RESERVADOS | ANA CATARINA LIMA - MIGUEL RIBEIRO <br />
            CET57 - PROJETO DE TECNOLOGIAS E PROGRAMAÇÃO DE SISTEMAS DE INFORMAÇÃO | Prof. ANTÓNIO PACHECO - Prof. JOÃO GALAMBA - Prof. RAFAEL SANTOS - Profª. SUSANA PIMENTEL
        </div>
    </footer>


    @* scripts section *@
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

</body>
</html>


@* script for scrolling to section *@
<script type="text/javascript">

    $("a").click(function () {
        var pageId = $(this).attr("data-page");
        $("html, body").animate({ scrollTop: $("#" + pageId).offset().top }, 1000);
    });

</script>