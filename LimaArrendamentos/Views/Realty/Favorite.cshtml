@model IEnumerable<LimaArrendamentos.Data.Entities.Realty>
@{
    ViewData["Title"] = "Favorite";
}
<style>
    .filterDiv {
        float: left;
        color: #ffffff;
        text-align: center;
        margin: 2px;
        display: none;
    }

    .show {
        display: block;
    }

    .container {
        margin-top: 10px;
        overflow: hidden;
    }

    /* Style the buttons */
    .btn {
        border: none;
        outline: none;
        padding: 12px 16px;
        background-color: #f1f1f1;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #ddd;
        }

        .btn.active {
            background-color: #666;
            color: white;
        }
</style>

<h1>As lista de favoritos</h1>
@if (Model!=null)
{

    @foreach (var item in Model)
    {
        <div class="col-md-6" style=" margin-top: 5%;">
            <div class="property-item">
                <div class="pi-image">
                    <img src="../img/property-search/1.jpg" alt="">
                    <div class="pi-badge new">New</div>
                </div>
                <h3>@Html.DisplayFor(modelItem => item.Value)</h3>
                <h5>@Html.DisplayFor(modelItem => item.nBedrooms) Bedrooms House</h5>
                <div class="pi-metas">
                    <div class="pi-meta">@Html.DisplayFor(modelItem => item.nBedrooms) Bed </div>
                    <div class="pi-meta">@Html.DisplayFor(modelItem => item.nBathrooms) Baths</div>
                    <div class="pi-meta">Typology: @Html.DisplayFor(modelItem => item.Typology)</div>
                    <div class="pi-meta">Energy Class: @Html.DisplayFor(modelItem => item.EnergyClass)</div>
                    <div class="pi-meta">
                        <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-success">
                            Remover
                        </a>
                    </div>
                </div>
                <a asp-action="Details" asp-route-id="@item.Id">
                    <lord-icon src="https://cdn.lordicon.com/mecwbjnp.json"
                               trigger="loop-on-hover"
                               colors="primary:#121331,secondary:#242424"
                               style="width:50px;height:50px">
                    </lord-icon>
                </a>
            </div>
        </div>
    }
}
